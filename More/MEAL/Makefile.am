#
# Rule to generate MEAL.pdf
#

# convert Postscript to Abobe Acrobat Portable Document Format
%.pdf: %.ps
	ps2pdf $<

# convert dvi file format to Postscript using Adobe safe ligatures
%.ps: %.dvi
	dvips -Ppdf -G0 -o $@ $<

%.dvi: %.tex $(FIGS) $(TEXS)
	latex $*
	latex $* 

doc: MEAL.pdf

